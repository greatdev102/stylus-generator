.table
  width 100%
  max-width 100%
  border-radius $border-radius
  border-collapse collapse
  border-spacing 0
  overflow-x auto
  min-height 0.01%

  tr
    > th
      background-color #ddd
      border-right 1px solid #fff

      &:last-child
        border-right-color #ddd

    > td
      background-color #fff
      border: 1px solid #ddd

      a
        color: $text-color
        &:hover
          color $m-brand-blue

      span
        font-size: 125px;
        margin: 4px -1px 0 -3px;
        display: inline-block;
        height: 32px;
        line-height: 32px;
        overflow: hidden;
        color: #ddd;

  td, th
    text-align left
    padding 10px 10px 7px 10px
    line-height 1.4
    vertical-align middle

.search-bar
  .btn
    display inline-block
    border-radius $border-radius
    margin-bottom 20px
    font-size 18px
    padding 8px 25px

  label
    display inline-block
    margin 0 20px 20px 0
    vertical-align top
    width calc(50% - 88px)

  input[type='text']
    border-radius $border-radius
    border 1px solid #ddd
    font-size 18px
    height 40px
    padding 0 25px